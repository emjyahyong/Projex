{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg rounded-3">
                    <div class="card-header bg-gradient-to-r from-blue-500 to-indigo-600 text-black text-center py-4 rounded-top">
                        <h3 class="mb-0">Modifier votre profil</h3>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form) }}
                        
                        <div class="form-group mb-4">
                            {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label fw-bold text-muted'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg shadow-sm'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label fw-bold text-muted'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg shadow-sm'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-lg btn-gradient-primary px-5 py-2">Enregistrer les modifications</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
                
                {# Message flash de succ√®s #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
