{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <div class="row">
        {% for team in teams %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ team.name }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">ID: {{ team.id }}</h6>
                        <p class="card-text">
                            <strong>Active:</strong> {{ team.isActive ? 'Yes' : 'No' }}
                        </p>
                        <p class="card-text">
                            <strong>CreatedAt:</strong> {{ team.createdAt ? team.createdAt|date('Y-m-d H:i:s') : 'Not available' }}
                        </p>
                        <a href="{{ path('app_team_show', {'id': team.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                        <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                        {{ include('team/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>Aucune équipe trouvée.</p>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_team_new') }}" class="btn btn-success mt-4">Créer une nouvelle équipe</a>
{% endblock %}
