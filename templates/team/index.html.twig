{% extends 'base.html.twig' %}

{% block title %}Équipes{% endblock %}

{% block body %}
    <h1>Liste des équipes</h1>

    <div class="row">
        {% for team in teams %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ team.name }}</h5>
                        {# <h6 class="card-subtitle mb-2 text-muted">ID: {{ team.id }}</h6> #}
                        <p class="card-text">
                            Équipe {{ team.isActive ? 'active' : 'inactive' }}
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                Créé le : {{ team.createdAt ? team.createdAt|date('j F Y') : 'Not available' }}
                            </small>
                        </p>
                        <div class="d-flex justify-content-start">
                            <a href="{{ path('app_team_show', {'id': team.id}) }}" class="btn btn-primary btn-sm me-2">Voir</a>
                            <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-primary btn-sm me-2">Modifier</a>
                            {{ include('team/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>Aucune équipe trouvée.</p>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_team_new') }}" class="btn btn-success mt-4">Créer une nouvelle équipe</a>
{% endblock %}
