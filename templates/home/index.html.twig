{% extends 'base.html.twig' %}

{% block title %}
    {% if app.user %}
        Gestion de projets - Tableau de bord
    {% else %}
        Bienvenue - Gestion de projets
    {% endif %}
{% endblock %}

{% block body %}
    {% if app.user %}
        <style>
            .dashboard {
                margin: 2em auto;
                max-width: 1200px;
                width: 95%;
                font-family: 'Arial', sans-serif;
            }
            .dashboard h1 {
                font-size: 2.5em;
                text-align: center;
                color: #333;
                margin-bottom: 1.5em;
            }
            .projects-overview {
                display: flex;
                justify-content: space-between;
                margin-bottom: 2em;
            }
            .projects-overview .card {
                background: #f7f7f7;
                border: 1px solid #ddd;
                border-radius: 8px;
                padding: 1.5em;
                width: 32%;
                text-align: center;
            }
            .projects-overview .card h2 {
                font-size: 1.5em;
                margin-bottom: 0.5em;
            }
            .projects-overview .card p {
                font-size: 1.2em;
                color: #666;
            }
            .quick-links {
                display: flex;
                justify-content: space-evenly;
                padding: 2em 0;
                background: #f0f0f0;
                border-radius: 8px;
            }
            .quick-links a {
                background: #3498db;
                color: white;
                padding: 1em 2em;
                border-radius: 8px;
                text-decoration: none;
                font-weight: bold;
                transition: background 0.3s;
            }
            .quick-links a:hover {
                background: #2980b9;
            }
            footer {
                margin-top: 3em;
                text-align: center;
                font-size: 0.9em;
                color: #777;
            }
        </style>

        <div class="dashboard">
            <h1>Tableau de bord de gestion de projets</h1>
            
            <div class="projects-overview">
                <div class="card">
                    <h2>Projets en cours</h2>
                    <p>3 projets actifs</p>
                </div>
                <div class="card">
                    <h2>Tâches en attente</h2>
                    <p>15 tâches à faire</p>
                </div>
                <div class="card">
                    <h2>Membres de l'équipe</h2>
                    <p>8 membres actifs</p>
                </div>
            </div>
            
            <div class="quick-links">
                <a href="{{ path('app_project_index') }}">Voir tous les projets</a>
                <a href="{{ path('app_project_new') }}">Ajouter un nouveau projet</a>
                <a href="{{ path('app_team_index') }}">Gérer les équipes</a>
            </div>
        </div>

        <footer>
            <p>&copy; {{ "now"|date("Y") }} Application de gestion de projets</p>
        </footer>

    {% else %}
        <style>
            .welcome-container {
                max-width: 800px;
                margin: 0 auto;
                padding: 2em;
                text-align: center;
                font-family: 'Arial', sans-serif;
            }
            .welcome-container h1 {
                color: #333;
                margin-bottom: 1em;
            }
            .welcome-container p {
                color: #666;
                line-height: 1.6;
                margin-bottom: 2em;
            }
            .cta-buttons {
                display: flex;
                justify-content: center;
                gap: 2em;
            }
            .cta-button {
                display: inline-block;
                padding: 1em 2em;
                text-decoration: none;
                border-radius: 5px;
                font-weight: bold;
                transition: background 0.3s;
            }
            .cta-button.login {
                background-color: #3498db;
                color: white;
            }
            .cta-button.register {
                background-color: #2ecc71;
                color: white;
            }
            .cta-button:hover {
                opacity: 0.9;
            }
        </style>

        <div class="welcome-container">
            <h1>Bienvenue sur votre plateforme de gestion de projets</h1>
            
            <p>
                Gérez vos projets, collaborez avec votre équipe et suivez vos tâches 
                facilement et efficacement. Connectez-vous pour commencer à travailler 
                intelligemment.
            </p>
            
            <div class="cta-buttons">
                <a href="{{ path('app_login') }}" class="cta-button login">Se connecter</a>
                <a href="{{ path('app_register') }}" class="cta-button register">S'inscrire</a>
            </div>
        </div>
    {% endif %}
{% endblock %}