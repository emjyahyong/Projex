{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Task Count</th>
                <td>{{ taskCount }}</td>
            </tr>
            <tr>
                <th>Pending Tasks</th>
                <td>{{ pendingCount }}</td>
            </tr>
            <tr>
                <th>In Progress Tasks</th>
                <td>{{ inProgressCount }}</td>
            </tr>
            <tr>
                <th>Completed Tasks</th>
                <td>{{ completedCount }}</td>
            </tr>
            <tr>
                <th>Failed Tasks</th>
                <td>{{ failedCount }}</td>
            </tr>
            <tr>
                <th>Completion Percentage</th>
                <td>{{ completionPercentage|number_format(2) }}%</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_project_index') }}">back to list</a>

    <a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
