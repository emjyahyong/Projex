{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
    <h1>Liste des projets</h1>

    <div class="row">
        {% for project in projects %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ project.name }}</h5>
                        {# <h6 class="card-subtitle mb-2 text-muted">ID: {{ project.id }}</h6> #}
                        <p class="card-text">
                            {{ project.description }}
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Créé le: {{ project.createdAt ? project.createdAt|date('j F Y') : '' }}</small>
                        </p>
                        <div class="d-flex justify-content-start">
                            <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-primary btn-sm me-2">Voir</a>
                            <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-primary btn-sm me-2">Modifier</a>
                            {{ include('project/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>Aucun projet trouvé.</p>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_project_new') }}" class="btn btn-success mt-4">Créer un nouveau projet</a>
{% endblock %}